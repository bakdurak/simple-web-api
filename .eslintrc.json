{
  "parserOptions": {
    "ecmaVersion": 2018
  },

  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },

  "extends": [
  ],

  "rules": {
    "eqeqeq": 1,
    "prefer-const": 2,
    "no-const-assign": 2,
    "no-var": 2,
    "no-new-object": 2,
    "object-shorthand": 2,
    "quote-props": [ "error", "as-needed" ],
    "no-prototype-builtins": 2, // https://eslint.org/docs/rules/no-prototype-builtins - server side vulnerabilities
    "no-array-constructor": 2,
    "array-callback-return": 2,
    "quotes": [ "error", "single" ],
    "prefer-template": 2,
    "template-curly-spacing": 2,
    "no-eval": 2,
    "no-useless-escape": 2,
    "no-loop-func": 2,
    "prefer-rest-params": 2,
    "no-new-func": 2,
    "space-before-function-paren": [ "error", "always" ],
    "prefer-spread": 2,
    "prefer-arrow-callback": 2,
    "arrow-spacing": 2,
    "arrow-parens": 2,
    "no-confusing-arrow": 2,
    "no-dupe-class-members": 2,
    "no-iterator": 2,
    "dot-notation": 2,
    "no-undef": 2,
    "one-var": [ "error", "never" ],
    "no-multi-assign": 2,
    "no-plusplus": [ "error", { "allowForLoopAfterthoughts": true } ],
    "no-unused-vars": 2,
    "no-case-declarations": 2,
    "no-nested-ternary": 2,
    "no-unneeded-ternary": 2,
    "no-mixed-operators": 2,
    "nonblock-statement-body-position": 2,
    "brace-style": [ "error", "allman" ],
    "no-else-return": 2,
    "spaced-comment": 2,
    "indent": ["error", 2, { "SwitchCase": 1 } ],
    "space-before-blocks": 2,
    "keyword-spacing": 2,
    "space-infix-ops": 2,
    "eol-last": 2,
    "newline-per-chained-call": 2,
    "no-whitespace-before-property": 2,
    "padded-blocks": [ "error", "never" ],
    "space-in-parens": [ "error", "always" ],
    "array-bracket-spacing": [ "error", "always" ],
    "object-curly-spacing": [ "error", "always" ],
    "max-len": [ "error", { "code": 100 } ],
    "block-spacing": 2,
    "comma-spacing": 2,
    "computed-property-spacing": [ "error", "always" ],
    "func-call-spacing": 2,
    "key-spacing": 2,
    "no-trailing-spaces": [ "error", { "skipBlankLines": true } ],
    "no-multiple-empty-lines": 2,
    "comma-style": 2,
    "semi": 2,
    "no-new-wrappers": 2,
    "radix": 2,
    "camelcase": 2,
    "new-cap": 2,
    "capitalized-comments": 2,
    "space-unary-ops": [
      "error", {
        "words": true,
        "nonwords": true,
        "overrides": {
          "+": false,
          "-": false,
          "++": false,
          "--": false
        }
      }]
  },

  "plugins": [
  ]
}
